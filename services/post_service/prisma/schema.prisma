generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas = ["post","tag", "thank"]
}

model Post {
  id String @id @default(uuid())
  authorId String
  content String
  imageUrl String
  link String
  tags PostTag[]
  createdAt DateTime @default(now())
  @@schema("post")
}

model Tag {
  id String @id @default(uuid())
  name String @unique
  posts PostTag[]
  @@schema("tag")
}

model PostTag {
  postId String
  tagId String
  post Post @relation(fields: [postId], references: [id])
  tag Tag @relation(fields: [tagId], references: [id])
  @@id([postId, tagId])
  @@schema("post")
}

model Thank {
  id String @id @default(uuid())
  messageId String
  fromUserId String
  toUserId String
  createdAt DateTime @default(now())
  @@schema("thank")
}