generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multischema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas = ["user"]
}

model Profile {
  id String @id @default(uuid())
  userId String @unique
  avatar_url String?
  post_count Int @default(0)
  followed_tags Json?
  thanks_received Int @default(0)
  @@schema("user")
}